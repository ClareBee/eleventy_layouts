{% extends 'layouts/simple.njk' %}

{% block postContent %}

<div class="service-area bg2 sp">
  <div class="container">
    <div class="row">
    {% for topic in collections.topics %}
      <div class="col-lg-4 col-md-6 single-service">
          <div class="inner">
              <div class="title">
                  <div class="icon">
                      <i class="fa fa-{{ topic.data.faIcon }}"></i>
                  </div>
                  <h4>{{ topic.data.title }}</h4>
              </div>
              <div class="content">
                  <p>{{ topic.data.description }}</p>
                  <a href={{topic.url}}>Read more</a>
              </div>
          </div>
      </div>
    {% endfor %}
    </div>
  </div>
</div>

{% endblock postContent %}
